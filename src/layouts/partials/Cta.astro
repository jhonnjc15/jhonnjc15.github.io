---
import config from "@config/config.json";

const {
  call_to_action: {
    title,
    description,
    image,
    button: { label, link },
  },
} = config;
---

<section class="section px-5 py-10 xl:py-16">
  <div class="container">
    <div
      class="bg-gradient row items-center justify-center gap-8 lg:gap-12 rounded-[48px] px-5 py-8 lg:px-10 lg:py-12"
    >
      <div class="lg:col-6">
        <div class="space-y-5">
          <h2 class="text-3xl md:text-4xl font-bold text-white leading-tight">{title}</h2>
          <p class="text-white text-base md:text-lg leading-relaxed">
            {description}
          </p>
          <a class="btn btn-white inline-flex w-auto items-center" href={link} target="_blank" rel="noreferrer">{label}</a>
        </div>
      </div>
      <div class="lg:col-6">
        {image && (
          <div class="overflow-hidden rounded-[28px] border border-white/20 bg-white/10 p-3 md:p-4 shadow-2xl backdrop-blur max-w-xl mx-auto">
            <img
              src={image}
              alt="Divulgación científica 2025"
              class="mx-auto h-full w-full rounded-2xl object-cover"
              loading="lazy"
            />
          </div>
        )}
      </div>
    </div>
  </div>
</section>
