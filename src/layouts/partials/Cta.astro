---
const { call_to_action } = Astro.props;

const {
  title = "",
  description = "",
  image = "",
  button: { label = "", link = "" } = {},
} = call_to_action ?? {};
---

<section class="section px-5 py-0 xl:py-14">
  <div class="container">
    <div
      class="bg-gradient
            grid grid-cols-1 lg:grid-cols-2
            items-center gap-6 lg:gap-10
            rounded-[40px] px-4 py-7 lg:px-8 lg:py-10"
    >
      <div class="flex justify-center lg:justify-start">
        <div class="space-y-4 text-center lg:text-left max-w-xl">
          <h2 class="text-3xl md:text-4xl font-bold text-white leading-tight">
            {title}
          </h2>

          <p class="text-white text-base md:text-lg leading-relaxed">
            {description}
          </p>

          {label && link && (
            <a
              class="btn btn-white inline-flex w-auto items-center justify-center lg:justify-start gap-3"
              href={link}
              target="_blank"
              rel="noreferrer"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="h-5 w-5"
                aria-hidden="true"
              >
                <path d="M21.8 8.001a2.75 2.75 0 0 0-1.94-1.94C18.25 5.75 12 5.75 12 5.75s-6.25 0-7.86.311a2.75 2.75 0 0 0-1.94 1.94C2 9.611 2 12 2 12s0 2.389.2 3.999a2.75 2.75 0 0 0 1.94 1.94C5.75 18.25 12 18.25 12 18.25s6.25 0 7.86-.311a2.75 2.75 0 0 0 1.94-1.94C22 14.389 22 12 22 12s0-2.389-.2-3.999Z" />
                <path fill="#fff" d="M10 14.857 14.5 12 10 9.143v5.714Z" />
              </svg>
              {label}
            </a>
          )}
        </div>
      </div>
            <div class="flex justify-center">
        {image && (
          <div class="overflow-hidden rounded-[24px] border border-white/20 bg-white/10 p-3 shadow-2xl backdrop-blur max-w-lg">
            <img
              src={image}
              alt={title || "Call to action image"}
              class="h-full w-full rounded-2xl object-cover"
              loading="lazy"
            />
          </div>
        )}
      </div>
    </div>
  </div>
</section>
