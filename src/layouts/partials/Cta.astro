---
const { call_to_action } = Astro.props;

const {
  title = "",
  description = "",
  image = "",
  button: { label = "", link = "" } = {},
} = call_to_action ?? {};
---

<section class="section px-5 py-0 xl:py-14">
  <div class="container">
    <div
      class="bg-gradient
            grid grid-cols-1 lg:grid-cols-2
            items-center gap-6 lg:gap-10
            rounded-[40px] px-4 py-7 lg:px-8 lg:py-10"
    >
      <div class="flex justify-center lg:justify-start">
        <div class="space-y-4 text-center lg:text-left max-w-xl">
          <h2 class="text-3xl md:text-4xl font-bold text-white leading-tight">
            {title}
          </h2>

          <p class="text-white text-base md:text-lg leading-relaxed">
            {description}
          </p>

          {label && link && (
            <a
              class="btn btn-white inline-flex w-auto items-center justify-center lg:justify-start gap-3"
              href={link}
              target="_blank"
              rel="noreferrer"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor"
                class="h-5 w-5"
                aria-hidden="true"
              >
                <path d="M22.678 6.208a2.834 2.834 0 0 0-1.995-2.007C18.97 3.75 12 3.75 12 3.75s-6.97 0-8.683.451A2.834 2.834 0 0 0 1.322 6.21C1.057 7.942.875 9.696.875 11.452v1.096c0 1.756.182 3.51.447 5.242a2.834 2.834 0 0 0 1.995 2.008C5.03 20.25 12 20.25 12 20.25s6.97 0 8.683-.452a2.834 2.834 0 0 0 1.995-2.008c.265-1.732.447-3.486.447-5.242v-1.096c0-1.756-.182-3.51-.447-5.242Z" />
                <path
                  fill="#fff"
                  d="M10 15.023 15.5 12 10 8.977v6.046Z"
                />
              </svg>
              {label}
            </a>
          )}
        </div>
      </div>
            <div class="flex justify-center">
        {image && (
          <div class="overflow-hidden rounded-[24px] border border-white/20 bg-white/10 p-3 shadow-2xl backdrop-blur max-w-lg">
            <img
              src={image}
              alt={title || "Call to action image"}
              class="h-full w-full rounded-2xl object-cover"
              loading="lazy"
            />
          </div>
        )}
      </div>
    </div>
  </div>
</section>
