---
interface ImageData {
  src: string;
  alt?: string;
}

interface SectionData {
  title: string;
  description: string;
  image?: ImageData;
}

const { section } = Astro.props as { section: SectionData };
---

<section data-animate="fade-up" class="py-20 bg-gradient-to-br from-primary/10 to-secondary/10">
  <div class="container mx-auto flex flex-col-reverse lg:flex-row items-center gap-12">
    <div class="lg:w-1/2 space-y-5">
      <h2 class="text-3xl font-bold text-primary">{section.title}</h2>
      <p class="text-text-offset leading-relaxed">{section.description}</p>
    </div>
    {section.image && (
      <div class="lg:w-1/2">
        <img
          src={section.image.src}
          alt={section.image.alt ?? section.title}
          class="rounded-2xl shadow-lg w-full object-cover"
        />
      </div>
    )}
  </div>
</section>
