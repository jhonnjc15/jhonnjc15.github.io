---
interface ImageData {
  src: string;
  alt?: string;
}

interface SectionData {
  title: string;
  description: string;
  image?: ImageData;
}

const { section } = Astro.props as { section: SectionData };
---

<section class="py-20 bg-background text-text">
  <div class="container mx-auto flex flex-col lg:flex-row items-center gap-12">
    {section.image && (
      <div class="lg:w-1/2">
        <img
          src={section.image.src}
          alt={section.image.alt ?? section.title}
          class="rounded-2xl shadow-xl w-full object-cover"
        />
      </div>
    )}
    <div class="lg:w-1/2">
      <h2 class="text-3xl font-bold text-primary mb-4">{section.title}</h2>
      <p class="text-text-offset leading-relaxed">{section.description}</p>
    </div>
  </div>
</section>
