---
import GlowShape from "@layouts/GlowShape.astro";

interface ImageData {
  src: string;
  alt?: string;
}

interface SectionData {
  eyebrow?: string;
  title: string;
  description: string;
  image?: ImageData;
}

const { section } = Astro.props as { section: SectionData };
---

<section class="py-20 bg-background text-text relative overflow-hidden" data-animate="fade-up">
  <GlowShape
    width={340}
    height={240}
    top={-64}
    right={-40}
    from="var(--color-secondary)"
    to="#4ade80"
    fromStop={30}
    toStop={70}
    blur={64}
    opacity={0.25}
    skewX={0}
    skewY={0}
  />
  <div class="container mx-auto flex flex-col lg:flex-row items-center gap-12 relative">
    <div class="lg:w-1/2 space-y-4">
      {section.eyebrow && (
        <p class="text-xs uppercase tracking-[0.25em] text-secondary font-semibold">{section.eyebrow}</p>
      )}
      <h2 class="text-3xl md:text-4xl font-bold text-primary mb-2">{section.title}</h2>
      <p class="text-text-offset leading-relaxed text-lg">{section.description}</p>
    </div>
    {section.image && (
      <div class="lg:w-1/2" data-animate="zoom-in">
        <img
          src={section.image.src}
          alt={section.image.alt ?? section.title}
          class="rounded-2xl shadow-xl w-full object-cover border border-primary/10"
        />
      </div>
    )}
  </div>
</section>
