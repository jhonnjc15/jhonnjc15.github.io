---
interface ImageData {
  src: string;
  alt?: string;
}

interface SectionData {
  title: string;
  description: string;
  image?: ImageData;
  quote?: string;
}

const { vision, mission } = Astro.props as {
  vision: SectionData;
  mission: SectionData;
};

const sharedImage = vision.image ?? mission.image;
---

<section class="py-20 bg-background-offset text-text relative overflow-hidden" data-animate="fade-up">
  <div class="container mx-auto px-6 max-w-6xl flex flex-col lg:flex-row items-center gap-12">
    {sharedImage && (
      <div class="lg:w-1/2">
        <img
          src={sharedImage.src}
          alt={sharedImage.alt ?? vision.title}
          class="rounded-2xl shadow-lg w-full object-cover"
        />
      </div>
    )}

    <div class="lg:w-1/2 space-y-8 text-center lg:text-left">
      <div data-animate="fade-up">
        <h2 class="text-4xl md:text-5xl font-bold text-primary mb-4">{vision.title}</h2>
        <p class="text-lg text-text-offset leading-relaxed">{vision.description}</p>
      </div>

      <div data-animate="fade-right">
        <h2 class="text-4xl md:text-5xl font-bold text-secondary mb-4">{mission.title}</h2>
        <p class="text-lg text-text-offset leading-relaxed">{mission.description}</p>
      </div>

      {vision.quote && (
        <div data-animate="zoom-in" class="pt-4">
          <p class="italic text-text-offset">{vision.quote}</p>
        </div>
      )}
    </div>
  </div>

  <span class="absolute -top-20 -right-20 w-[400px] h-[300px] bg-gradient-to-tr from-secondary to-green-400 rounded-full blur-3xl opacity-30"></span>
  <span class="absolute bottom-0 left-10 w-[300px] h-[200px] bg-gradient-to-tr from-primary to-green-400 rounded-full blur-2xl opacity-20"></span>
</section>
