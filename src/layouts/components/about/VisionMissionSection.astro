---
interface ImageData {
  src: string;
  alt?: string;
}

interface SectionData {
  title: string;
  description: string;
  image?: ImageData;
  quote?: string;
  statement?: string;
}

const { vision, mission } = Astro.props as {
  vision: SectionData;
  mission: SectionData;
};

const sharedImage = vision.image ?? mission.image;

const formatSections = (text: string) => {
  if (!text) return [];

  return text
    .split(/(?<=\.)\s+(?=[A-ZÁÉÍÓÚÜÑ])/)
    .map((segment) => segment.trim())
    .filter(Boolean)
    .map((segment) => {
      const match = segment.match(/^([^:]+):\s*(.*)$/);

      if (match) {
        const [, label, body] = match;
        return {
          label: label.trim(),
          body: body.trim(),
        };
      }

      return { body: segment };
    });
};

const visionSections = formatSections(vision.description);
const missionSections = formatSections(mission.description);
---

<section
  class="relative overflow-hidden bg-background-offset py-20 text-text"
  data-animate="fade-up"
>
  <div class="relative container mx-auto max-w-6xl px-6">
    <div class="mb-12 text-center">
      <span class="inline-flex items-center rounded-full bg-primary/10 px-4 py-1 text-xs font-semibold uppercase tracking-[0.25em] text-primary shadow-sm">
        {vision.title}
      </span>
      <h2 class="mt-4 text-3xl font-bold text-dark dark:text-white md:text-4xl">Our Vision &amp; Our Mission</h2>
      {vision.statement && (
        <p class="mt-3 text-base font-semibold text-primary dark:text-primary-200">
          {vision.statement}
        </p>
      )}
      {vision.quote && (
        <p class="mt-2 text-base italic text-text-offset dark:text-gray-200 md:text-lg">{vision.quote}</p>
      )}
    </div>

    <div class="space-y-10">
      <div class="grid gap-6 md:grid-cols-2">
        <div class="group relative overflow-hidden rounded-2xl bg-white/90 p-6 shadow-2xl ring-1 ring-border/40 backdrop-blur dark:bg-slate-900/70 dark:ring-white/10">
          <div class="mb-3 flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.2em] text-primary">
            <span class="rounded-full bg-primary/10 px-3 py-1 text-primary shadow-sm">Vision</span>
          </div>
          <h3 class="text-2xl font-bold text-primary">Our Vision</h3>
          {visionSections.length ? (
            <ul class="mt-3 space-y-3 text-text-offset dark:text-gray-200">
              {visionSections.map((item) => (
                <li class="flex gap-3 rounded-xl bg-white/70 px-3 py-2 text-sm shadow-sm ring-1 ring-primary/10 dark:bg-slate-800/70 dark:ring-white/10">
                  <span class="mt-1 h-2 w-2 shrink-0 rounded-full bg-primary"></span>
                  <div>
                    {item.label && <span class="font-semibold text-primary">{item.label}: </span>}
                    <span class="leading-relaxed">{item.body}</span>
                  </div>
                </li>
              ))}
            </ul>
          ) : (
            <p class="mt-3 text-base leading-relaxed text-text-offset dark:text-gray-200">{vision.description}</p>
          )}
        </div>

        <div class="group relative overflow-hidden rounded-2xl bg-white/90 p-6 shadow-2xl ring-1 ring-border/40 backdrop-blur dark:bg-slate-900/70 dark:ring-white/10">
          <div class="mb-3 flex items-center gap-2 text-xs font-semibold uppercase tracking-[0.2em] text-secondary">
            <span class="rounded-full bg-secondary/10 px-3 py-1 text-secondary shadow-sm">Mission</span>
          </div>
          <h3 class="text-2xl font-bold text-secondary">Our Mission</h3>
          {missionSections.length ? (
            <ul class="mt-3 space-y-3 text-text-offset dark:text-gray-200">
              {missionSections.map((item) => (
                <li class="flex gap-3 rounded-xl bg-white/70 px-3 py-2 text-sm shadow-sm ring-1 ring-secondary/10 dark:bg-slate-800/70 dark:ring-white/10">
                  <span class="mt-1 h-2 w-2 shrink-0 rounded-full bg-secondary"></span>
                  <div>
                    {item.label && <span class="font-semibold text-secondary">{item.label}: </span>}
                    <span class="leading-relaxed">{item.body}</span>
                  </div>
                </li>
              ))}
            </ul>
          ) : (
            <p class="mt-3 text-base leading-relaxed text-text-offset dark:text-gray-200">{mission.description}</p>
          )}
        </div>
      </div>

      {sharedImage && (
        <div class="relative" data-animate="fade-up">
          <div class="absolute inset-0 rounded-3xl bg-gradient-to-tr from-primary/15 to-secondary/20 blur-2xl"></div>
          <div class="relative overflow-hidden rounded-3xl shadow-2xl ring-1 ring-white/60 dark:ring-white/10">
            <div class="aspect-[5/3] w-full overflow-hidden sm:aspect-[16/7]">
              <img
                src={sharedImage.src}
                alt={sharedImage.alt ?? vision.title}
                class="h-full w-full object-cover"
                loading="lazy"
              />
            </div>
          </div>
        </div>
      )}
    </div>
  </div>
</section>
