---
interface ImageData {
  src: string;
  alt?: string;
}

interface SectionData {
  title: string;
  description: string;
  image?: ImageData;
  quote?: string;
  statement?: string;
}

const { vision, mission } = Astro.props as {
  vision: SectionData;
  mission: SectionData;
};

const sharedImage = vision.image ?? mission.image;
const headingText = `${vision.title} & ${mission.title}`;

const formatSections = (text: string) => {
  if (!text) return [];

  return text
    .split(/(?<=\.)\s+(?=[A-ZÁÉÍÓÚÜÑ])/)
    .map((segment) => segment.trim())
    .filter(Boolean)
    .map((segment) => {
      const match = segment.match(/^([^:]+):\s*(.*)$/);

      if (match) {
        const [, label, body] = match;
        return {
          label: label.trim(),
          body: body.trim(),
        };
      }

      return { body: segment };
    });
};

const visionSections = formatSections(vision.description);
const missionSections = formatSections(mission.description);
---

<section
  class="relative overflow-hidden bg-background-offset py-20 text-text"
  data-animate="fade-up"
>
  <div class="relative container mx-auto max-w-6xl px-6 space-y-10">
    <div class="text-center">
      <h2 class="text-3xl font-extrabold text-dark dark:text-white md:text-4xl">{headingText}</h2>
    </div>

    <div class="grid gap-6 md:grid-cols-2">
      <div class="group rounded-2xl bg-white/90 p-7 shadow-2xl backdrop-blur dark:bg-slate-900/80">
        <h3 class="text-2xl font-bold text-primary dark:text-primary-200">{vision.title}</h3>
        {visionSections.length ? (
          <ul class="mt-4 space-y-3 text-text-offset dark:text-gray-100">
            {visionSections.map((item) => (
              <li class="flex gap-3 rounded-xl bg-white/70 px-3 py-2 text-sm shadow-sm dark:bg-slate-800/80">
                <span class="mt-1 h-2 w-2 shrink-0 rounded-full bg-primary"></span>
                <div>
                  {item.label && <span class="font-semibold text-primary dark:text-primary-200">{item.label}: </span>}
                  <span class="leading-relaxed">{item.body}</span>
                </div>
              </li>
            ))}
          </ul>
        ) : (
          <p class="mt-4 text-base leading-relaxed text-text-offset dark:text-gray-100">{vision.description}</p>
        )}
      </div>

      <div class="group rounded-2xl bg-white/90 p-7 shadow-2xl backdrop-blur dark:bg-slate-900/80">
        <h3 class="text-2xl font-bold text-secondary dark:text-secondary">{mission.title}</h3>
        {missionSections.length ? (
          <ul class="mt-4 space-y-3 text-text-offset dark:text-gray-100">
            {missionSections.map((item) => (
              <li class="flex gap-3 rounded-xl bg-white/70 px-3 py-2 text-sm shadow-sm dark:bg-slate-800/80">
                <span class="mt-1 h-2 w-2 shrink-0 rounded-full bg-secondary"></span>
                <div>
                  {item.label && <span class="font-semibold text-secondary">{item.label}: </span>}
                  <span class="leading-relaxed">{item.body}</span>
                </div>
              </li>
            ))}
          </ul>
        ) : (
          <p class="mt-4 text-base leading-relaxed text-text-offset dark:text-gray-100">{mission.description}</p>
        )}
      </div>
    </div>

    {vision.statement && (
      <p class="rounded-2xl bg-white/70 px-6 py-4 text-center text-lg italic text-dark shadow-lg dark:bg-slate-900/80 dark:text-gray-100">
        {vision.statement}
      </p>
    )}

    {sharedImage && (
      <div class="overflow-hidden rounded-3xl shadow-2xl" data-animate="fade-up">
        <div class="aspect-[5/3] w-full overflow-hidden sm:aspect-[16/7]">
          <img
            src={sharedImage.src}
            alt={sharedImage.alt ?? vision.title}
            class="h-full w-full object-cover"
            loading="lazy"
          />
        </div>
      </div>
    )}
  </div>
</section>
