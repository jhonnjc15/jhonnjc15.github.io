---
interface ImageData {
  src: string;
  alt?: string;
}

interface SectionData {
  title: string;
  description: string;
  image?: ImageData;
}

const { section } = Astro.props as { section: SectionData };
---

<section class="py-20 bg-gradient-to-tr from-secondary/20 to-primary/10">
  <div class="container mx-auto text-center max-w-3xl">
    <h2 class="text-3xl md:text-5xl font-bold text-primary mb-6">{section.title}</h2>
    <p class="text-lg text-text-offset leading-relaxed mb-10">{section.description}</p>
    {section.image && (
      <img
        src={section.image.src}
        alt={section.image.alt ?? section.title}
        class="mx-auto rounded-2xl shadow-lg max-h-[400px] object-cover"
      />
    )}
  </div>
</section>
