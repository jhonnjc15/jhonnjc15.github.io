---
import PageHeader from "@components/PageHeader.astro";
import GlowShape from "@layouts/GlowShape.astro";

const { page_data } = Astro.props;
---
<section
  class="page-hero relative overflow-hidden pb-14"
  style="--header-offset: var(--header-total-height, 148px); margin-top: calc(-1 * var(--header-offset)); padding-top: calc(var(--header-offset) + clamp(2.5rem, 1.5vw, 3.5rem));"
>
  <slot name="background" />
  <div class="container">
    <GlowShape
      size={200}
      top={-20}
      left={0}
      from="var(--color-secondary)"
      to="#4ade80"
      fromStop={30}
      toStop={80}
      blur={56}
      opacity={0.4}
      rotate={90}
    />

    <GlowShape
      size={180}
      top={500}
      right={100}
      from="var(--color-secondary)"
      to="#4ade80"
      fromStop={35}
      toStop={85}
      blur={56}
      opacity={0.4}
      rotate={90}
    />

    <div data-animate="fade-up" class="page-hero-content mx-auto max-w-[768px] text-center">
      <PageHeader page_data={page_data} />
    </div>
  </div>
</section>
