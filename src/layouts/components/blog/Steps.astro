---
import StepCard from "@components/blog/StepCard.astro";

const { steps = [], title } = Astro.props;
const { currentLocale } = Astro;
const heading = title ?? (currentLocale === "en" ? "Step-by-step" : "Paso a paso");
---

<section class="mt-12 space-y-6">
  <div class="flex items-center gap-3">
    <span class="inline-flex h-10 w-10 items-center justify-center rounded-2xl bg-primary/10 text-primary font-semibold">
      {steps.length}
    </span>
    <h2 class="text-2xl font-bold">{heading}</h2>
  </div>

  <div class="space-y-6">
    {steps.map((step: any, index: number) => (
      <StepCard step={step} index={index} />
    ))}
  </div>
</section>
