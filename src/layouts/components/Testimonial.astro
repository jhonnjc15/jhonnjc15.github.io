---
import TestimonialSlider from "@layouts/function-components/TestimonialSlider";
import GlowShape from "@layouts/GlowShape.astro";
const { testimonial } = Astro.props;
---

<section data-animate="fade-up" class="section reviews">
  <div class="container">
    <div class="text-center max-w-3xl mx-auto space-y-3">
      {testimonial.eyebrow && (
        <p class="text-xs uppercase tracking-[0.25em] text-secondary font-semibold">{testimonial.eyebrow}</p>
      )}
      <h2 class="text-3xl md:text-4xl font-extrabold text-default">{testimonial.title}</h2>
      <p class="text-text-offset leading-relaxed">{testimonial.description}</p>
    </div>
    <div class="row mt-12">
      <div class="col-12">
        <TestimonialSlider list={testimonial.testimonial_list} client:load />
      </div>
    </div>

  </div>
  <GlowShape
    size={250}
    bottom={0}
    right={0}
    from="var(--color-secondary)"
    to="#4ade80"
    fromStop={85}
    toStop={15}
    blur={64}
    opacity={0.3}
    rotate={90}
    zIndex={0}
  />
</section>
