---
import { humanize, markdownify, slugify } from "@lib/utils/textConverter";
import { getRelativeLocaleUrl } from "astro:i18n";
import GlowShape from "@layouts/GlowShape.astro";

const { currentLocale } = Astro
const { page_data } = Astro.props || {};
const { title, index_title, page_title, slug, content, index_path } = page_data || {};
// //console.log(title)
// //console.log(index_title)
// //console.log(page_title)
// //console.log(slug)
// //console.log(content)
// //console.log(index_path)
---

<div class="text-center relative overflow-hidden rounded-3xl bg-gradient-to-b from-background to-background-offset px-6 py-4 shadow-sm">
  <GlowShape
    size={180}
    top={-32}
    left={24}
    from="var(--color-secondary)"
    to="#4ade80"
    fromStop={25}
    toStop={75}
    blur={64}
    opacity={0.3}
    rotate={90}
  />
  <GlowShape
    size={120}
    top={20}
    right={24}
    from="var(--color-secondary)"
    to="#4ade80"
    fromStop={35}
    toStop={80}
    blur={48}
    opacity={0.3}
    rotate={90}
  />
  <div class="relative" data-animate="fade-up">
    <div class="w-full overflow-x-auto overflow-y-hidden [-webkit-overflow-scrolling:touch]">
      <ul
        class="border border-primary/30 breadcrumb inline-flex items-center justify-center space-x-2 rounded-3xl
              dark:bg-theme-light/20 bg-theme-light/80 px-5 py-2 backdrop-blur
              whitespace-nowrap overflow-y-hidden"
      >
        <li class="leading-none text-dark shrink-0">
          <a
            href={getRelativeLocaleUrl(currentLocale ?? '',`/`)}
            class="inline-flex items-end text-primary shrink-0"
          >
            <svg
              class="mr-1.5 leading-none shrink-0"
              width="18"
              height="18"
              viewBox="0 0 16 16"
              xmlns="http://www.w3.org/2000/svg"
            >
              <path
                d="M13.1769 15.0588H10.3533V9.41178H5.64744V15.0588H2.82391V6.58825H1.88274V16H14.118V6.58825H13.1769V15.0588ZM6.58862 15.0588V10.353H9.41215V15.0588H6.58862ZM15.8084 6.09225L15.2512 6.85178L8.00038 1.52472L0.749559 6.8499L0.192383 6.09131L8.00038 0.357666L15.8084 6.09225Z"
                fill="currentColor"></path>
            </svg>
            <span class="leading-none shrink-0">Home</span>
          </a>
        </li>

        <li class="leading-none text-dark shrink-0">
          {
            index_title ? (
              <span class="leading-none shrink-0">
                <span class="text-default">/</span>{" "}
                <a
                  href={getRelativeLocaleUrl(currentLocale ?? '',`/${index_path}`)}
                  class="text-primary shrink-0"
                >
                  {index_title}
                </a>{" "}
                <span class="text-default">/</span>{" "}
                <span class="text-default shrink-0">
                  {page_title ? page_title : humanize(slug.replace("page /", ""))}
                </span>
              </span>
            ) : (
              <span class="leading-none text-default shrink-0">/ {title}</span>
            )
          }
        </li>
      </ul>
    </div>
    <div class="p-0 lg:p-10">
      <h1
        class="mb-5 mt-8 text-default text-3xl sm:text-4xl md:text-5xl font-extrabold tracking-tight"
        set:html={markdownify(
          page_data?.page_title ? page_data?.page_title : page_data?.title
        )}
      />
      <p
        class="text-default text-base sm:text-lg max-w-3xl mx-auto leading-relaxed"
        set:html={markdownify(content)}
      />

      {
        page_data.buttons && (
          <div class="mt-11 justify-center sm:flex gap-4" data-animate="zoom-in">
            {page_data.buttons.map(
              (button: any) =>
                button?.enable && (
                  <a
                    class={`btn m-3 block sm:inline-block content-center ${
                      button?.outline ? "btn-outline-primary" : "btn-primary"
                    } `}
                    href={getRelativeLocaleUrl(currentLocale ?? '',`${button?.link}`)}
                  >
                    {button?.label}
                  </a>
                )
            )}
          </div>
        )
      }
    </div>
  </div>
</div>
