---
import { Image } from 'astro:assets';
import config from "@config/config.json";
import { plainify } from "@lib/utils/textConverter";
import { getI18N } from "@i18n/index";
const { summary_length } = config.settings;
const { products, product_list } = Astro.props;

const enhancedProducts = products.map((item) => {
  const mainImageObj = item.data.images?.find((img) => img.isMain);
  return {
    ...item,
    mainImage: mainImageObj?.src || '/images/default.jpg'
  };
});

import { getRelativeLocaleUrl } from "astro:i18n";

const { currentLocale } = Astro
const i18n = getI18N({ currentLocale });
---
<section class="relative space-y-6" data-animate="fade-up">
  <span class="absolute -z-10 -left-10 top-10 w-48 h-48 bg-gradient-to-br from-secondary/20 to-primary/10 blur-3xl"></span>
  <span class="absolute -z-10 right-0 -bottom-10 w-56 h-56 bg-gradient-to-tr from-primary/20 to-green-400/20 blur-3xl"></span>

  <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-4">
    <div class="space-y-2">
      <p class="text-sm uppercase tracking-[0.2em] text-primary font-semibold">
        {product_list.subtitle || i18n.LAYOUTS?.COMPONENTS?.PRODUCTS?.PRODUCTSLIST?.H2_SUBTITLE}
      </p>
      <h2 class="text-3xl font-extrabold text-slate-900 dark:text-white">{product_list.title}</h2>
      <p class="text-base text-gray-700 dark:text-gray-200 max-w-3xl">
        {product_list.description}
      </p>
    </div>
    <div class="flex items-center gap-3 bg-white/80 dark:bg-slate-900/60 border border-white/40 dark:border-white/10 rounded-2xl px-5 py-3 shadow-lg shadow-primary/10">
      <div class="h-12 w-12 rounded-2xl bg-gradient-to-tr from-primary to-secondary flex items-center justify-center text-white font-bold">
        {products.length}
      </div>
      <div class="text-sm text-gray-700 dark:text-gray-200">
        <p class="font-semibold">{i18n.LAYOUTS?.COMPONENTS?.PRODUCTS?.PRODUCTSLIST?.TOTAL_LABEL}</p>
        <p class="text-xs opacity-80">{i18n.LAYOUTS?.COMPONENTS?.PRODUCTS?.PRODUCTSLIST?.TOTAL_COPY}</p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-6">
    {
      enhancedProducts.map((item: any) => (
        <article class="group relative overflow-hidden rounded-3xl border border-white/40 dark:border-white/10 bg-white/90 dark:bg-slate-900/60 shadow-xl shadow-primary/10 backdrop-blur flex flex-col h-full">
          <div class="relative aspect-[4/3] overflow-hidden">
            <Image
              transition:name={`img-${item.data.id_product}`}
              class="h-full w-full object-cover transition duration-500 group-hover:scale-105"
              width={640}
              height={480}
              src={item.mainImage}
              alt={item.data.title}
            />
            <span class="absolute left-4 top-4 inline-flex items-center gap-1 rounded-full bg-white/80 dark:bg-slate-900/80 px-3 py-1 text-xs font-semibold text-primary shadow">
              {i18n.LAYOUTS?.COMPONENTS?.PRODUCTS?.PRODUCTSLIST?.STARTING_FROM} ${item.data.price}
            </span>
          </div>
          <div class="flex flex-col gap-3 p-6 flex-1">
            <div class="flex items-start justify-between gap-2">
              <div class="space-y-1">
                <p transition:name={`title-${item.data.id_product}`} class="text-lg font-semibold text-slate-900 dark:text-white">
                  {item.data.title}
                </p>
                <p class="text-sm text-gray-700 dark:text-gray-200 leading-relaxed">
                  {plainify(item.data.description?.slice(0, Number(summary_length)))}...
                </p>
              </div>
              <span class="rounded-full bg-primary/10 text-primary text-xs font-semibold px-3 py-1 self-start">
                {i18n.LAYOUTS?.COMPONENTS?.PRODUCTS?.PRODUCTSLIST?.LABELS?.NEW}
              </span>
            </div>
            <div class="flex items-center justify-between pt-2">
              <div class="flex items-center gap-2 text-xs uppercase tracking-[0.14em] text-primary font-semibold">
                <span class="h-2 w-2 rounded-full bg-green-400 animate-pulse"></span>
                {i18n.LAYOUTS?.COMPONENTS?.PRODUCTS?.PRODUCTSLIST?.READY_LABEL}
              </div>
              <a
                class="inline-flex items-center gap-2 rounded-full bg-gradient-to-r from-primary to-secondary px-4 py-2 text-xs font-semibold uppercase text-white shadow-lg shadow-primary/20 transition hover:scale-[1.02]"
                href={getRelativeLocaleUrl(
                  currentLocale ?? '',
                  `/products/${item.data.id_product}`,
                )}
                type="button">
                <span>{product_list.product_detail_button.label || i18n.LAYOUTS?.COMPONENTS?.PRODUCTS?.PRODUCTSLIST?.CTA}</span>
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke-width="1.5"
                  stroke="currentColor"
                  class="w-4 h-4"
                >
                  <path stroke-linecap="round" stroke-linejoin="round" d="M17.25 8.25L21 12m0 0l-3.75 3.75M21 12H3" />
                </svg>
              </a>
            </div>
          </div>
        </article>
      ))
    }
  </div>
</section>
