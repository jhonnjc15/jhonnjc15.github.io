---
import {
  IoLogoFacebook,
  IoLogoInstagram,
  IoLogoLinkedin,
  IoLinkOutline,
} from "react-icons/io5/index.js";

const {
  title,
  description,
  slug,
  className,
  showCopy = false,
  copyLabel = "Copied!",
  forceLight = false,
} = Astro.props;
const itemClassBase =
  "relative inline-flex h-11 w-11 items-center justify-center rounded-full border bg-white/80 shadow-sm transition hover:border-primary/40 hover:bg-primary/10 hover:text-primary";
const itemClass = forceLight
  ? `${itemClassBase} border-black/20 text-black/70`
  : `${itemClassBase} border-black/15 text-text-offset dark:border-white/25 dark:bg-white/20 dark:text-white`;
---

<ul
  class={`${className}`}
  data-share-title={title}
  data-share-description={description}
  data-share-slug={slug}
>
  <li class="inline-block">
    <a
      aria-label="facebook share button"
      href="#"
      target="_blank"
      rel="noreferrer noopener"
      class={itemClass}
      data-share-link="facebook"
    >
      <IoLogoFacebook />
    </a>
  </li>
  <li class="inline-block">
    <a
      aria-label="linkedin share button"
      href="#"
      target="_blank"
      rel="noreferrer noopener"
      class={itemClass}
      data-share-link="linkedin"
    >
      <IoLogoLinkedin />
    </a>
  </li>
  <li class="inline-block">
    <a
      aria-label="instagram share button"
      href="#"
      target="_blank"
      rel="noreferrer noopener"
      class={itemClass}
      data-share-link="instagram"
    >
      <IoLogoInstagram />
    </a>
  </li>
  {
    showCopy && (
      <li class="inline-block">
        <button
          type="button"
          aria-label="copy link"
          class={`${itemClass} copy-link-button`}
          data-copy-label={copyLabel}
        >
          <IoLinkOutline />
          <span class="copy-tooltip pointer-events-none absolute -top-2 left-full z-20 ml-0.5 translate-x-0 -translate-y-full whitespace-nowrap rounded-lg bg-paqariGreen px-3 py-1 text-xs font-semibold text-white opacity-0 shadow-lg transition duration-200 ease-out dark:bg-paqariYellow dark:text-black">
            {copyLabel}
          </span>
        </button>
      </li>
    )
  }
</ul>
