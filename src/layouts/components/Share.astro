---
import {
  IoLogoFacebook,
  IoLogoInstagram,
  IoLogoLinkedin,
  IoLinkOutline,
} from "react-icons/io5/index.js";

const {
  title,
  description,
  slug,
  className,
  showCopy = false,
  copyLabel = "Copied!",
} = Astro.props;
const itemClass =
  "relative inline-flex h-11 w-11 items-center justify-center rounded-full border border-black/15 bg-white/80 text-text-offset shadow-sm transition hover:border-primary/40 hover:bg-primary/10 hover:text-primary dark:border-white/20 dark:bg-white/15";
---

<ul
  class={`${className}`}
  data-share-title={title}
  data-share-description={description}
  data-share-slug={slug}
>
  <li class="inline-block">
    <a
      aria-label="facebook share button"
      href="#"
      target="_blank"
      rel="noreferrer noopener"
      class={itemClass}
      data-share-link="facebook"
    >
      <IoLogoFacebook />
    </a>
  </li>
  <li class="inline-block">
    <a
      aria-label="linkedin share button"
      href="#"
      target="_blank"
      rel="noreferrer noopener"
      class={itemClass}
      data-share-link="linkedin"
    >
      <IoLogoLinkedin />
    </a>
  </li>
  <li class="inline-block">
    <a
      aria-label="instagram share button"
      href="#"
      target="_blank"
      rel="noreferrer noopener"
      class={itemClass}
      data-share-link="instagram"
    >
      <IoLogoInstagram />
    </a>
  </li>
  {
    showCopy && (
      <li class="inline-block">
        <button
          type="button"
          aria-label="copy link"
          class={`${itemClass} copy-link-button`}
          data-copy-label={copyLabel}
        >
          <IoLinkOutline />
          <span class="copy-tooltip pointer-events-none absolute -top-10 left-1/2 -translate-x-1/2 rounded-full bg-green-500 px-3 py-1 text-xs font-semibold text-white opacity-0 shadow-lg transition">
            {copyLabel}
          </span>
        </button>
      </li>
    )
  }
</ul>
